<div class="py-8 flex border-t-2 border-gray-800 flex-wrap md:flex-no-wrap">
  <div class="md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col">
    <span class="tracking-widest font-medium title-font text-white">
      {{ item.data.category }}
    </span>
    <span class="mt-1 text-sm">
      <time value="{{ item.date }}">
        {{ item.date | readableDate }}
      </time>
    </span>
  </div>
  <div class="md:flex-grow">
    <h2 class="text-2xl font-medium text-white title-font mb-2">
      <a href="{{ item.url }}">{{ item.data.title }}</a>
    </h2>
    <p class="leading-relaxed">
      {{ item.templateContent | section | safe }}
    </p>
    <a class="text-orange-500 inline-flex items-center mt-4" href="{{ item.url }}" aria-label="Read more of the blog post titled; {{ item.data.title }}">
      Read the rest of this blog post
      <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14"></path>
        <path d="M12 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</div>
